<UserControl x:Class="SilverlightContrib.Sample.ColorPickerSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sc="clr-namespace:SilverlightContrib.Controls;assembly=SilverlightContrib.Controls">
    <Grid x:Name="LayoutRoot">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <sc:ColorPicker x:Name="ColorPicker1" SelectedColor="#FF00FF00" SelectedColorChanging="ColorPicker1_SelectedColorChanging" SelectedColorChanged="ColorPicker1_SelectedColorChanged" />
            <TextBlock x:Name="tbCurrColor" Foreground="{StaticResource textColour}" Margin="0,8,0,4"></TextBlock>
            <TextBlock x:Name="tbCurrColor1" Foreground="{StaticResource textColour}" Margin="0,8,0,4" Width="500" ></TextBlock>
            <Button Style="{StaticResource ButtonStyle}" Content="Select Random Color" Margin="4" HorizontalAlignment="Center" Click="Button_Click" />
            <sc:ColorPicker x:Name="ColorPicker2" Margin="20" Height="150" Width="150" SelectedColor="Purple" />
        </StackPanel>
    </Grid>
</UserControl>
